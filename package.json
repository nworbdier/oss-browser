{
  "name": "oss-browser",
  "version": "0.1.0",
  "description": "An open-source web browser built with Electron",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "bun run build-app",
    "build-app": "electron-builder",
    "lint": "eslint ."
  },
  "keywords": [
    "browser",
    "electron",
    "web"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "postcss": "^8.5.3"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "tailwindcss": "^4.0.8"
  },
  "build": {
    "appId": "com.oss-browser.app",
    "productName": "OSS Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "main.html",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "src/Logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/Logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/Logo.png"
    }
  }
}
